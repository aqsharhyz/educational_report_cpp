struct Mahasiswa{
    string nama;
    string prodi="Ilmu Komputer";
    unsigned int id;
    unsigned int NIU;
    int sks[9]={3, 3, 3, 2, 3, 2, 2, 2, 2};
    float nilai[9];
    float nilaiSks[9];
    //nilai = {FD, KD, KAL, BINDO, PRG, PRAK PRG, LOGIF, ALF, AGAMA}
    char grade[9];
    float IPK;
};

